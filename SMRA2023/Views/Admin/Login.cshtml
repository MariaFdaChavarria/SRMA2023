@{
    ViewBag.Title = "Login Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var elemento = document.getElementById("page-topbar");
        if (elemento) {
            elemento.style.display = "none";
        }
    });
    document.addEventListener("DOMContentLoaded", function () {
        var elementos = document.querySelectorAll(".vertical-menu");
        elementos.forEach(function (elemento) {
            elemento.style.display = "none";
        });
    });
</script>

<html>
<body>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-5 d-none d-lg-block bg-login rounded-left"></div>
                                <div class="col-lg-7">
                                    <div class="p-5">
                                        <div class="text-center mb-5">
                                            <a href="" class="text-dark font-size-22 font-family-secondary">
                                                <i class="mdi mdi-album"></i> <b>SRMA</b>
                                            </a>
                                        </div>
                                        <h1 class="h5 mb-1">¡Bienvenido!</h1>
                                        <p class="text-muted mb-4">Ingresa tu correo y contraseña para acceder como administrador.</p>
                                        <form class="user">
                                            <div class="form-group">
                                                <input type="email" class="form-control form-control-user" id="exampleInputEmail" placeholder="Correo electronico">
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Contraseña">
                                            </div>
                                            <a href="@Url.Action("Admin","Admin")" class="btn btn-success btn-block waves-effect waves-light"> Iniciar sesion </a>
                                        </form>
                                        <!-- end row -->
                                    </div> <!-- end .padding-5 -->
                                </div> <!-- end col -->
                            </div> <!-- end row -->
                        </div> <!-- end .w-100 -->
                    </div> <!-- end .d-flex -->
                </div> <!-- end col-->
            </div> <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

</body>
</html>





