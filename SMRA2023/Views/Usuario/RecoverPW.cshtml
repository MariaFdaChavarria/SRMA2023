@model SMRA2023.Entities.UsuarioEntities

@{
    ViewBag.Title = "Recuperar contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var elemento = document.getElementById("page-topbar");
        if (elemento) {
            elemento.style.display = "none";
        }
    });
    document.addEventListener("DOMContentLoaded", function () {
        var elementos = document.querySelectorAll(".vertical-menu");
        elementos.forEach(function (elemento) {
            elemento.style.display = "none";
        });
    });
</script>

<body>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-5 d-none d-lg-block bg-login rounded-left"></div>
                                <div class="col-lg-7">
                                    <div class="p-5">
                                        <div class="text-center mb-5">
                                            <a href="index.html" class="text-dark font-size-22 font-family-secondary">
                                                <i class="mdi mdi-album"></i> <b>SRMA</b>
                                            </a>
                                        </div>
                                        <h1 class="h5 mb-1">Recuperar tu contraseña</h1>
                                        <p class="text-muted mb-4">Ingresa tu correo electronico y se te enviarán las intrucciones para recuperar la contraseña.</p>
                                        @using (Html.BeginForm("email_Recovery", "Usuario", FormMethod.Post, new { @class = "pt-3" }))
                                        {
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.email, new {@class = "form-control form-control-lg", @placeholder="Correo", @Type="Email", @required=true})
                                            </div>
                                            <div class="mt-3">
                                                <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Recuperar contraseña">
                                            </div>
                                        }

                                        <div class="row mt-5">
                                            <div class="col-12 text-center">
                                                <p class="text-muted">¿Ya tienes una cuenta?  <a href="@Url.Action("Index","Usuario")" class="text-muted font-weight-medium ml-1"><b>Inicia sesion</b></a></p>
                                                <p class="text-muted mb-0">¿No tienes una cuenta? <a href="@Url.Action("Register","Usuario")" class="text-muted font-weight-medium ml-1"><b>Registrare</b></a></p>
                                            </div> <!-- end col -->
                                        </div>
                                        <!-- end row -->
                                    </div> <!-- end .padding-5 -->
                                </div> <!-- end col -->
                            </div> <!-- end row -->
                        </div> <!-- end .w-100 -->
                    </div> <!-- end .d-flex -->
                </div> <!-- end col-->
            </div> <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
  
</body>
@{
    var ErrorCorreo = TempData["ErrorCorreo"] as string;
    var ContrasenaRecuperada = TempData["ContrasenaRecuperada"] as string;
    var Exito = TempData["Exito"] as string;
}

@if (!string.IsNullOrEmpty(ErrorCorreo))
{
    <script>
        Swal.fire({
            title: '@ErrorCorreo',
            icon: 'error',
            confirmButtonText: 'Entendido'
        });
    </script>
}
else if (!string.IsNullOrEmpty(ContrasenaRecuperada))
{
    <script>
        Swal.fire({
            title: '@ContrasenaRecuperada',
            icon: 'success',
            confirmButtonText: 'Entendido'
        });
    </script>
}
