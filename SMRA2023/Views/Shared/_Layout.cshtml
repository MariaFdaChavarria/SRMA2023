<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SMRA2023</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SMRA2023.styles.css" asp-append-version="true" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Theme/assets/images/favicon.ico">

    <!-- App css -->
    <link href="~/Theme/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Theme/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Theme/assets/css/theme.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.15.5/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.15.5/dist/sweetalert2.all.min.js"></script>

</head>

<body>

    @{
        var nameSession = Context.Session.GetString("NameSession");
    }

    <!-- Begin page -->
    <div id="layout-wrapper">
        @RenderBody()
        <header id="page-topbar">
            <div class="navbar-header">
                <!-- LOGO -->
                <div class="navbar-brand-box d-flex align-items-left">
                    
                    <a href="@Url.Action("Index","Home")" class="logo">
                        <i class="mdi mdi-album"></i>
                        <span>
                            SRMA
                            
                        </span>
                    </a>
                    <button type="button" class="btn btn-sm mr-2 d-lg-none px-3 font-size-16 header-item waves-effect waves-light" id="vertical-menu-btn">
                        <i class="fa fa-fw fa-bars"></i>
                    </button>
                </div>
                <a href="@Url.Action("Index","Home")" class="logo">
                    <span>
                        <img href="@Url.Action("Index","Home")" src="~/Theme/assets/images/users/Logoma2.png"
                             class="mr-8 rounded-circle avatar-xl align-items-center">
                    </span>
                </a>
                <div class="d-flex align-items-center">

                    <a href="@Url.Action("Login","Admin")" class="btn btn-info btn-block waves-effect waves-light"> Admin </a>

                    <div class="dropdown d-none d-sm-inline-block ml-2">
                        <button type="button" class="btn header-item noti-icon waves-effect waves-light" id="page-header-search-dropdown"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="mdi mdi-magnify"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right p-0"
                             aria-labelledby="page-header-search-dropdown">

                            <form class="p-3">
                                <div class="form-group m-0">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Search ..." aria-label="Recipient's username">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="submit"><i class="mdi mdi-magnify"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="dropdown d-inline-block">
                        <button type="button" class="btn header-item noti-icon waves-effect waves-light" id="page-header-notifications-dropdown"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="mdi mdi-bell"></i>
                            <span class="badge badge-danger badge-pill">3</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right p-0"
                             aria-labelledby="page-header-notifications-dropdown">
                            <div class="p-3">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h6 class="m-0"> Notificaciones </h6>
                                    </div>
                                    <div class="col-auto">
                                        <a href="#!" class="small">Ver todo</a>
                                    </div>
                                </div>
                            </div>
                            <div data-simplebar style="max-height: 230px;">
                                <a href="" class="text-reset notification-item">
                                    <div class="media">
                                        <img src="~/Theme/assets/images/users/LOGOma.png"
                                             class="mr-3 rounded-circle avatar-xs" alt="user-pic">
                                        <div class="media-body">
                                            <h6 class="mt-0 mb-1">Promo pollo frito 2x1</h6>
                                            <p class="font-size-12 mb-1">Todo el fin de semana</p>
                                            <p class="font-size-12 mb-0 text-muted"><i class="mdi mdi-clock-outline"></i> 2 min ago</p>
                                        </div>
                                    </div>
                                </a>
                                <a href="" class="text-reset notification-item">
                                    <div class="media">
                                        <img src="~/Theme/assets/images/users/LOGOma.png"
                                             class="mr-3 rounded-circle avatar-xs" alt="user-pic">
                                        <div class="media-body">
                                            <h6 class="mt-0 mb-1">Unete a nuestro programa de lealtad</h6>
                                            <p class="font-size-12 mb-1">Consigue puntos y canjealos por descuentos</p>
                                            <p class="font-size-12 mb-0 text-muted"><i class="mdi mdi-clock-outline"></i> 1 day ago</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="p-2 border-top">
                                <a class="btn btn-sm btn-light btn-block text-center" href="javascript:void(0)">
                                    <i class="mdi mdi-arrow-down-circle mr-1"></i> Cargar más ...
                                </a>
                            </div>
                        </div>
                    </div>


                    <div class="dropdown d-inline-block ml-2">
                        <button type="button" class="btn header-item waves-effect waves-light" id="page-header-user-dropdown"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="d-none d-sm-inline-block ml-1">
                                <i class="mdi mdi-account "></i>

                            </span>
                            <i class="mdi mdi-chevron-down d-none d-sm-inline-block"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item d-flex align-items-center justify-content-between" href="@Url.Action("Profile","Usuario")">
                                <span>Perfil</span>
                                <span>
                                    <span class="badge badge-pill badge-warning">1</span>
                                </span>
                            </a>
                            <a class="dropdown-item d-flex align-items-center justify-content-between" href="@Url.Action("Index","Usuario")">
                                <span>Cerrar sesion</span>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </header>

        <!-- ========== Left Sidebar Start ========== -->
        <div class="vertical-menu">

            <div data-simplebar class="h-100">

                <!--- Sidemenu -->
                <div id="sidebar-menu">
                    <!-- Left Menu Start -->
                    <ul class="metismenu list-unstyled" id="side-menu">
                        <li class="menu-title">Menú</li>

                        <li>
                            <a href="@Url.Action("Index","Home")" class="waves-effect"><i class="feather-airplay"></i><span>Inicio</span></a>
                        </li>

                        <li>
                            <a href="@Url.Action("Index","LoyaltyProgram")" class="waves-effect"><i class="feather-bar-chart-2"></i><span>Programa de lealtad</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Reservation")" class="waves-effect"><i class="feather-airplay"></i><span>Reservaciones</span></a>
                        </li>


                    </ul>

                    <div class="help-box">
                        <h5 class="text-muted font-size-15 mb-3">Ayuda y soporte.</h5>
                        <p class="font-size-13"><span class="font-weight-bold">Coreo electronico:</span> <br> SRMAsupport@SRMA.com</p>
                        <p class="mb-0 font-size-13"><span class="font-weight-bold">Call:</span> <br> 26556688 </p>
                    </div>
                </div>
                <!-- Sidebar -->
            </div>
        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->

        <footer class="footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        2023 © SRMA.
                    </div>
                    <div class="col-sm-6">
                        <div class="text-sm-right d-none d-sm-block">
                            Diseñado y desarrolaldo por SRMA.
                        </div>
                    </div>
                </div>
            </div>
        </footer>

    </div>
    <!-- end main content-->

    <!-- END layout-wrapper -->
    <!-- Overlay-->
    <div class="menu-overlay"></div>


    <!-- jQuery  -->
    <script src="~/Theme/assets/js/jquery.min.js"></script>
    <script src="~/Theme/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Theme/assets/js/metismenu.min.js"></script>
    <script src="~/Theme/assets/js/waves.js"></script>
    <script src="~/Theme/assets/js/simplebar.min.js"></script>

    <!-- Sparkline Js-->
    <script src="~/Theme/plugins/jquery-sparkline/jquery.sparkline.min.js"></script>

    <!-- Chart Js-->
    <script src="~/Theme/plugins/jquery-knob/jquery.knob.min.js"></script>

    <!-- Morris Js-->
    <script src="~/Theme/plugins/morris-js/morris.min.js"></script>
    <!-- Raphael Js-->
    <script src="~/Theme/plugins/raphael/raphael.min.js"></script>

    <!-- Custom Js -->
    <script src="~/Theme/assets/pages/dashboard-demo.js"></script>

    <!-- App js -->
    <script src="~/Theme/assets/js/theme.js"></script>
</body>
</html>
